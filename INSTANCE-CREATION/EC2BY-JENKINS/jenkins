pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git 'https://github.com/majithabhanus/EC2-CREATION-BY-JENKINS.git'
            }
        }

        stage('Terraform') {
            steps {
                dir('INSTANCE-CREATION/EC2BY-JENKINS') {
                    sh 'terraform init'
                    sh 'terraform plan'
                    sh 'terraform apply -auto-approve'
                }
            }
        }
    }
}
